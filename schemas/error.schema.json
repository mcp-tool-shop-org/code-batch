{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://codebatch.dev/schemas/error.schema.json",
  "title": "CodeBatch Error Envelope",
  "description": "Schema for codebatch --json error responses. All failures under --json mode return this envelope.",
  "type": "object",
  "required": ["error"],
  "properties": {
    "error": {
      "type": "object",
      "required": ["code", "message"],
      "properties": {
        "code": {
          "type": "string",
          "pattern": "^[A-Z][A-Z0-9_]*$",
          "description": "Machine-readable error code (e.g., 'STORE_NOT_FOUND')"
        },
        "message": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable error message"
        },
        "hints": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Actionable suggestions for resolving the error"
        },
        "details": {
          "type": "object",
          "description": "Context-specific error details",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
